{
  "expo": {
    "name": "Cardz",
    "slug": "my-new-test-app",
    "version": "1.0.0",
    "icon": "./assets/images/cardz_white_logo_sqwered.png",
    "orientation": "portrait",
    "scheme": "mycardz",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/cardz_white_logo_sqwered.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.cardz.app",
      "googleServicesFile": ".\/GoogleService-Info\.plist",
      "infoPlist": {
        "UIBackgroundModes": [
          "remote-notification",
          "remote-notification"
        ],
        "NSUserNotificationUsageDescription": "האפליקציה שולחת התראות על שוברים והטבות חדשות.",
        "NSLocationWhenInUseUsageDescription": "האפליקציה משתמשת במיקום שלך כדי להציג עסקים קרובים אליך ראשונים ברשימה. המיקום לא נשמר ולא משותף.",
        "NFCReaderUsageDescription": "האפליקציה משתמשת ב-NFC לניקוב כרטיסיות בעסקים",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/cardz_white_logo_sqwered.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.mycardz.app",
      "googleServicesFile": "./google-services.json",
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "android.permission.NFC",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-web-browser",
      "@react-native-firebase/app",
      "@react-native-firebase/messaging",
      "./plugins/ios-modular-headers",
      [
        "expo-build-properties",
        {
          "ios": {
            "useModularHeaders": true,
            "useFrameworks": "static"
          }
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/icons/1.png",
          "color": "#ffffff"
        }
      ],
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "האפליקציה משתמשת במיקום שלך כדי להציג עסקים קרובים אליך ראשונים ברשימה."
        }
      ],
      "expo-secure-store",
      "react-native-nfc-manager"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "fc85016d-22a6-4ff7-93c0-3a7768e8a859"
      }
    },
    "owner": "rordan"
  }
}
